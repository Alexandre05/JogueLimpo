<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.joguelimpocomosanimais.Activity.Conversas">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageFotoConversa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/c_pessoa" />

        <TextView
            android:id="@+id/textConversa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexandre"
            android:textSize="17dp"
            android:textStyle="bold">

        </TextView>

    </androidx.appcompat.widget.Toolbar>
    <include layout="@layout/content_conversas" />

</LinearLayout>