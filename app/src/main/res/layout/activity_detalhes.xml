<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="0dp"

    tools:context="br.com.joguelimpocomosanimais.Activity.DetalhesAc"
    tools:ignore="ExtraText">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouse"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="2dp"

        android:padding="0dp"
        app:pageColor="#00000000"
        app:radius="3dp"
        app:slideInterval="3000"
        app:strokeColor="#43A047"
        app:strokeWidth="1dp" />

    <TextView
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="Nome Do Pet"
        android:textColor="#191818"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="8dp"
        android:text="Nome Do Pet"
        android:textSize="25sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="Porte"
        android:textColor="#191818"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Porte"
        android:layout_width="266dp"
        android:layout_height="wrap_content"


        android:paddingLeft="8dp"
        android:text="Porte"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="Raça"
        android:textColor="#191818"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="266dp"
        android:layout_height="wrap_content"


        android:paddingLeft="8dp"
        android:text="Raça"
        android:textSize="25sp" />

    <TextView
        android:layout_width="275dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="Informações Gerais"
        android:textColor="#191818"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="364dp"
        android:layout_height="48dp"

        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="8dp"
        android:text="Ob"
        android:textSize="25sp" />

    <TextView
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="Mais Informações. Liguei ou acesse o Chat"
        android:textColor="#191818"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Anuncioante"
        android:layout_width="369dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"

        android:text="Nome Anunciante"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonDoar"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/botoaentrar"
        android:onClick="entrarContato"
        android:text=" Ligue  " />

    <Button

        android:id="@+id/buttonMsf"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/botoaentrar"
        android:onClick="Chat"
        android:text=" Entre Em nosso Chat " />

</LinearLayout>