<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.joguelimpocomosanimais.Activity.MeusAnimais">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Dialog.MinWidth">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/Theme.AppCompat.Dialog.MinWidth" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cameraU"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"

        app:srcCompat="@drawable/camera" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fotoU"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"

        app:srcCompat="@drawable/fotogaleria" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reclyAnim"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>